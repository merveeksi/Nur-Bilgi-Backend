@* HeroSection.razor
   Blazor bileşeni: Hero Section
   Performans (lazy loading) ve güvenlik ön planda tutulmuştur.
*@
<div class="bg-gradient-to-b from-green-50 to-green-100">
    <header>
        <div class="px-4 mx-auto sm:px-6 lg:px-8">
            <div class="flex items-center justify-between h-16 lg:h-20">
                <div class="flex-shrink-0">
                    <a href="#" title="Ana Sayfa" class="flex">
                        <img class="w-auto h-8" src="https://cdn.rareblocks.xyz/collection/celebration/images/hero/2/logo.svg" alt="Logo" loading="lazy" />
                    </a>
                </div>
                <button type="button" class="inline-flex p-1 text-black transition-all duration-200 border border-black lg:hidden focus:bg-gray-100 hover:bg-gray-100"
                        @onclick="ToggleMenu" aria-label="Mobil Menü">
                    @if (!isMenuOpen)
                    {
                        <svg class="block w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                        </svg>
                    }
                    else
                    {
                        <svg class="block w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    }
                </button>
                <div class="hidden ml-auto lg:flex lg:items-center lg:justify-center lg:space-x-10">
                    <a href="#" title="Features" class="text-base font-semibold text-black transition-all duration-200 hover:text-opacity-80">Features</a>
                    <a href="#" title="Solutions" class="text-base font-semibold text-black transition-all duration-200 hover:text-opacity-80">Solutions</a>
                    <a href="#" title="Resources" class="text-base font-semibold text-black transition-all duration-200 hover:text-opacity-80">Resources</a>
                    <a href="#" title="Pricing" class="text-base font-semibold text-black transition-all duration-200 hover:text-opacity-80">Pricing</a>
                    <div class="w-px h-5 bg-black/20"></div>
                    <a href="#" title="Log in" class="text-base font-semibold text-black transition-all duration-200 hover:text-opacity-80">Log in</a>
                    <a href="#" title="Try for free" class="inline-flex items-center justify-center px-5 py-2.5 text-base font-semibold text-black border-2 border-black hover:bg-black hover:text-white transition-all duration-200 focus:bg-black focus:text-white" role="button">Try for free</a>
                </div>
            </div>
        </div>
    </header>

    @* Search *@
    <div class="flex justify-center items-center min-h-screen">
        <div class="relative">
            <div class="relative">
                <input @bind="searchText" @bind:event="oninput" @onfocus="HandleFocus" @onblur="HandleBlur"
                       class="h-[33px] w-[240px] bg-[#B1BEC6] border-2 border-[#5F8FA4] rounded-full pl-8 pr-10 py-1 text-sm text-gray-600 focus:outline-none"
                       placeholder="Search..." />
                
                <span class="absolute left-3 top-[10px] w-3 h-3 border-2 border-[#5F8FA4] rounded-full">
                    <span class="absolute bottom-[-3px] right-[-3px] h-[6px] w-[3px] bg-[#5F8FA4] rotate-[-45deg]"></span>
                </span>
                
                <div class="absolute right-[12px] top-[6px] h-6 w-6 bg-[#FF5252] rounded-full shadow cursor-pointer" @onclick="ToggleMicrophone">
                    <div class="absolute h-3 w-2 bg-[#8c1c1c] rounded-lg left-2 top-[3px]"></div>
                    <div class="absolute border-b-2 border-[#8c1c1c] h-[10px] w-[10px] rounded-full top-[6px] left-[7px]"></div>
                    <div class="absolute h-1 w-[2px] bg-[#8c1c1c] bottom-[3px] left-[11px]"></div>
                </div>
            </div>

            <div class="flex justify-around mt-2">
                @foreach (var icon in Icons)
                {
                    <div class="relative h-[35px] w-[35px] bg-[#43b3e7] rounded-full shadow cursor-pointer @(isFocused ? "icon-animation" : "opacity-0") @(icon.AnimationDelay)" @onclick="@(() => SelectIcon(icon.Name))">
                        @switch (icon.Name)
                        {
                            case "Parking":
                                <span class="absolute left-[10px] top-[9px] font-bold text-sm text-[#43b3e7] bg-white px-[3px] py-[1px] rounded-full">P</span>
                                break;
                            case "Gas":
                                <span class="absolute top-[9px] left-[11px] h-[15px] w-[12px] bg-white rounded-t"></span>
                                <span class="absolute top-[11px] left-[13px] h-[6px] w-[8px] bg-[#43b3e7] z-10"></span>
                                <div class="absolute bg-white w-4 h-1 top-[23px] left-[9px] rounded">
                                    <span class="absolute h-[10px] w-[10px] rounded-full border-l-2 border-white bottom-1 left-[-1px]"></span>
                                </div>
                                break;
                            case "Food":
                                <span class="absolute h-[13px] w-1 bg-white rounded top-[15px] left-[11px]"></span>
                                <span class="absolute h-[5px] w-2 bg-white rounded-b top-[12px] left-[9px]"></span>
                                <div class="absolute h-[5px] w-[2px] bg-white top-[7px] left-[9px]">
                                    <span class="absolute h-[5px] w-[2px] bg-white top-0 left-[3px]"></span>
                                    <span class="absolute h-[5px] w-[2px] bg-white top-0 left-[6px]"></span>
                                </div>
                                <div class="absolute h-[9px] w-1 bg-white right-[11px] bottom-[7px] rounded">
                                    <span class="absolute h-[13px] w-[6px] bg-white bottom-2 rounded-tr-full"></span>
                                </div>
                                break;
                            case "Coffee":
                                <div class="absolute h-[14px] w-[17px] bg-white top-[15px] left-2 rounded-b-full">
                                    <span class="absolute h-[10px] w-[15px] rounded-full right-[-4px] border-r-2 border-white"></span>
                                </div>
                                <span class="absolute top-[6px] left-3 text-[5px] italic text-white transform -skew-y-6">S</span>
                                <span class="absolute top-[6px] left-[18px] text-[5px] italic text-white transform -skew-y-6">S</span>
                                break;
                            case "Misc":
                                <div class="absolute h-[5px] w-[5px] bg-white rounded-full left-[15px] top-[15px]">
                                    <span class="absolute h-[5px] w-[5px] bg-white rounded-full left-[9px]"></span>
                                    <span class="absolute h-[5px] w-[5px] bg-white rounded-full left-[-9px]"></span>
                                </div>
                                break;
                        }
                        
                        <div class="tooltip opacity-0 absolute text-xs text-white bg-gray-600 px-2 py-2 rounded top-[45px] z-10">
                            <span class="absolute bg-gray-600 h-[18px] w-[18px] top-[-10px] left-[7px] clip-path-polygon"></span>
                            @icon.Name
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <section class="py-10 sm:py-16 lg:py-24 bg-gray-100">
        <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
            <div class="grid items-center grid-cols-1 gap-12 lg:grid-cols-2">
                <div>
                    <h1 class="text-4xl font-bold text-black sm:text-6xl lg:text-7xl">
                        Collaborate remotely, with
                        <div class="relative inline-flex">
                            <span class="absolute inset-x-0 bottom-0 border-b-[30px] border-[#4ADE80]"></span>
                            <span class="relative text-4xl font-bold text-black sm:text-6xl lg:text-7xl">Postcrafts.</span>
                        </div>
                    </h1>
